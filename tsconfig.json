{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "declaration": true,
      "rootDir": "./src",
      "types": [
        "node",
        "jest"
      ],
      "lib": [
        "ES2020"
      ],
      "allowJs": false,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "strictPropertyInitialization": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "noUnusedParameters": false
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "**/*.test.ts",
        "node_modules/**/*"
    ]
  }